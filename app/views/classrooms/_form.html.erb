<section class="row"  id="signup">
  <div class="small-12 large-4 small-centered large-centered column">
      <fieldset>
        <%= form_for(@classroom) do |f| %>
          <div class="clearfix">
          <div class="input">
            <%= f.label :name %><br />
            <%= f.text_field :name %>
          </div>
          </div>

          <div class="clearfix">
          <div class="input">
            <%= f.label :description %><br />
            <%= f.text_area :description %>
          </div>
          </div>

          <div class="clearfix">
          <div class="input">
            <%= f.submit "Create Classroom" %>
          </div>
          </div>
        <% end %>
      </fieldset>
  </div>
</section>
