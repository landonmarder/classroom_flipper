<h1>Title: <%= @assignment.title %></h1>
<p><%= @assignment.video_link %></p>
<h3>Description: <%= @assignment.description %></h3>


<% @assignment.questions.each do |question| %>
  <div>
    <%= @question_number %>. <%= question.prompt %>
      <% @question_number = @question_number + 1 %>
      <% question.options.each do |option| %>
      <%= option.option_value %>
    <% end %>
  </div>
<% end %>

<div>Status: <%= @assignment.status %></div>

<%= link_to 'Close Video', '#' %>
<%= link_to 'Analyze Results', '#' %>
